            @Html.ValidationMessageFor(model => model.date_birth, "", new { @class = "text-danger" })
        </div>
    </div>

    <div style="display: flex; justify-content: space-between;">
        @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-primary" })
